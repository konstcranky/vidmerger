{
  "image": "tgotwig/ubuntu:0.0.4-24.04",
  "runArgs": [
    "--name",
    "devcontainer-vidmerger"
  ],
  "postCreateCommand": "asdf plugin add rust && asdf install && apt update -qq && apt install -yqq ffmpeg && task",
  "containerEnv": {
    "PATH": "/root/.asdf/shims:/usr/local/sbin:/usr/local/bin:/usr/sbin:/usr/bin:/sbin:/bin"
  },
  "customizations": {
    "vscode": {
      "extensions": [
        "bierner.markdown-mermaid",
        "bpruitt-goddard.mermaid-markdown-syntax-highlighting",
        "EditorConfig.EditorConfig",
        "rust-lang.rust-analyzer"
      ]
    }
  }
}
